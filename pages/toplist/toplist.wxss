
.tl-top {
  position: relative;
  height: 100%;
}
.tl-top::after {
  content: " ";
  display: block;
  padding-top: 100%;
}
.tl-top-b {
    position: absolute;
    bottom: 0;
    width: 100%;
    background-image: -webkit-linear-gradient(top,transparent,currentColor 80%);
}
.tl-top-b::after {
    content: " ";
    display: block;
    padding-top: 60%;
}

.tl-top-info {
    position: absolute;
    bottom: 0;
    width: 100%;
    z-index: 3;
}
.tl-img {
    width: 100%;
    height: 100%;
    position: absolute;
}

.tl-top-info-inner {
    display: -webkit-box;
    -webkit-box-align: center;
    margin: 0 15px 25px;
    color: #fff;
}

.tl-top-info-text {
    -webkit-box-flex: 1;
    margin-right: 10px;
}
.tl-top-info-title {
    font-size: 24px;
    line-height: 36px;
    white-space: nowrap;
    overflow: hidden;
}
.tl-top-info-base {
    font-size: 14px;
    line-height: 20px;
}
.tl-top-play {
    position: relative;
    display: block;
    width: 42px;
    height: 42px;
    margin-left: 10px;
    background: url("../../resources/images/play_btn_play.png");
    background-size: cover;
}
